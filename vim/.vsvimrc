set incsearch			" Show next match while entering search
set hlsearch			" Highlight search matches
set ignorecase			" Ignore case in searches
set smartcase			" Respect case when capital letters present
set backspace=indent,eol,start	" Allow backspace over new lines

let mapleader=","
inoremap jk <ESC>

" Visual Studio shortcuts
nnoremap gne :vsc View.NextError<CR>
nnoremap go  :vsc View.Output<CR>
nnoremap ge  :vsc View.ErrorList<CR>
nnoremap gf  :vsc SolutionExplorer.SyncWithActiveDocument<CR>
nnoremap <leader>b   :vsc Build.BuildSolution<CR>
nnoremap <leader>B   :vsc Build.BuildSelection<CR>
nnoremap <leader>d   :vsc Debug.Start
nnoremap <leader>D   :vsc Debug.StartWithoutDebugging
nnoremap <leader>rd  :vsc TestExplorer.DebugAllTestsInContext<CR>
nnoremap <leader>rt  :vsc TestExplorer.RunAllTestsInContext<CR>
nnoremap <leader>ra  :vsc TestExplorer.RunAllTests<CR>
nnoremap <leader>rl  :vsc TestExplorer.RepeatLastRun<CR>
